<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 第一层  连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/text_red" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- 第二层  主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="@color/white" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>