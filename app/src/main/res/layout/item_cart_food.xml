<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_8" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_4"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_item_cart_foodname"
            style="@style/text_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/hello_world" />

        <TextView
            android:id="@+id/tv_item_cart_foodprice"
            style="@style/text_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_8"
            android:singleLine="true"
            android:text="@string/hello_world"
            android:textColor="@color/text_orange" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/rl_item_cart_addnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_item_cart_subNum"
                android:layout_width="@dimen/cashOrder_foodAddSubImg_WH"
                android:layout_height="@dimen/cashOrder_foodAddSubImg_WH"
                android:padding="@dimen/cashOrder_foodAddSubImg_padding"
                android:src="@drawable/ic_jianhao_cheng" />

            <TextView
                android:id="@+id/tv_item_cart_num"
                style="@style/text_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_8"
                android:layout_marginRight="@dimen/default_8"
                android:gravity="center"
                android:minEms="1"
                android:text="0"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_item_cart_addNum"
                android:layout_width="@dimen/cashOrder_foodAddSubImg_WH"
                android:layout_height="@dimen/cashOrder_foodAddSubImg_WH"
                android:padding="@dimen/cashOrder_foodAddSubImg_padding"
                android:src="@drawable/ic_jiahao_cheng" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>