<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/tv_item_coupon_del"
        android:layout_width="match_parent"
        android:layout_height="@dimen/couponset_item_H"
        android:layout_marginRight="@dimen/couponset_marginTopRight"
        android:layout_marginTop="@dimen/couponset_marginTopRight"
        android:layout_toRightOf="@+id/tv_item_coupon_image"
        android:background="@color/coupon_add"
        android:gravity="center"
        android:text="@string/couponset_add"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/tv_item_coupon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_coupon_del"
        android:layout_alignTop="@+id/tv_item_coupon_del"
        android:scaleType="centerCrop"
        android:src="@drawable/coupon_lac_4" />

</RelativeLayout>