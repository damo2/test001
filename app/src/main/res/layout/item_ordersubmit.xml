<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/default_4"
    android:paddingLeft="@dimen/ordersubmit_numToLeft"
    android:paddingRight="@dimen/ordersubmit_numToLeft"
    android:paddingTop="@dimen/default_4" >

    <TextView
        android:id="@+id/tv_item_ordersumit_foodname"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_item_ordersumit_foodunit"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_ordersumit_foodname" />

    <TextView
        android:id="@+id/tv_item_ordersumit_foodprice"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_ordersumit_foodunit"
        android:layout_marginRight="@dimen/ordersubmit_priceToNum"
        android:layout_toLeftOf="@+id/tv_item_ordersumit_foodnum" />

    <TextView
        android:id="@+id/tv_item_ordersumit_foodnum"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_ordersumit_foodunit"
        android:layout_marginRight="@dimen/ordersubmit_priceToNum"
        android:layout_toLeftOf="@+id/tv_item_ordersumit_foodMoney"
        android:gravity="center"
        android:minWidth="@dimen/ordersubmit_foodnum_Wmin" />

    <TextView
        android:id="@+id/tv_item_ordersumit_foodMoney"
        style="@style/text_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_ordersumit_foodunit"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minWidth="@dimen/ordersubmit_foodMoney_Wmin" />

</RelativeLayout>