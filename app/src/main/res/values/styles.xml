<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Appbar背景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 控制各个控件被选中时的颜色 -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- toobar menu颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
        <!-- Edit  hint 的颜色 -->
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- Edit  下划线没有获取焦点的颜色 -->
        <item name="colorControlNormal">@color/text_gray</item>
        <!-- Edit  获取焦点 下划线 的颜色 -->
        <item name="colorControlActivated">@color/text_orange</item>
        <!-- Edit  点击的时候 下划线 的颜色 -->
        <item name="colorControlHighlight">@color/text_orange</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/mActivityAnimation</item>
        <!-- 页面背景色 -->
        <item name="android:windowBackground">@color/bg_default</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- animation 样式 -->
    <style name="mActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

</resources>
